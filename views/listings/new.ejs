<% layout("layouts/boilerplate") %>
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">
      <div>
        <label for="name" class="form-label">Title</label>
        <input
          name="listing[title]"
          placeholder="enter title"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">looks good</div>
        <div class="invalid-feedback">please enter only numbers</div>
      </div>

      <div>
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          placeholder="enter description"
          class="form-control"
          required
        ></textarea>
        <div class="valid-feedback">looks good</div>
        <div class="invalid-feedback">please enter description</div>
      </div>

      <div>
        <label for="image" class="form-label">Image</label>
        <input
          name="listing[image]"
        
          type="file"
          class="form-control"

          required
        />
        <div class="valid-feedback">looks good</div>
        <div class="invalid-feedback">please enter Image</div>
      </div>

      <div>
        <label for="price" class="form-label">Price</label>
        <input name="listing[price]" placeholder="enter price" type="number" class="form-control"  required/>
        <div class="valid-feedback">looks good</div>
        <div class="invalid-feedback">please enter only numbers</div>
      </div>

      <div>
        <label for="country" class="form-label"  required>Country</label>
        <input
          name="listing[country]"
          placeholder="enter country"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">looks good</div>
        <div class="invalid-feedback">please enter Country</div>
      </div>

      <div>
        <label for="location" class="form-label"  required>Location</label>
        <input
          name="listing[location]"
          placeholder="enter location"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">looks good</div>
        <div class="invalid-feedback">please enter location</div>
      </div>

      <br /><br />
      <button class="btn btn-dark add-btn">Add</button>
    </form>
